doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title= title
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")

  div.gameListAll

      input(id="score1",value="#{game.team1_score}",type="hidden" )
      input(id="score2",value="#{game.team2_score}",type="hidden" )

      h1 #{game.team1} - #{game.team2}

      h3#score1value #{game.team1_score}
      h3#score2value #{game.team2_score}
      h4 Fouls : #{game.team1_fouls} - #{game.team2_fouls}
      h4 Shots : #{game.team1_shots} - #{game.team2_shots}

      form(action="" name="inputScore" id="raiseScore1" method="post")
        input(id="stat_game_id", type="hidden", name ="stat_game_id" style="display: none;" value="#{game.id}")
        button(type="submit" id="scoreRaise") +1

      form(action="" name="inputScore" id="lowerScore1" method="post")
        input(id="stat_game_id", type="hidden", name ="stat_game_id" style="display: none;" value="#{game.id}")
        button(type="submit" id="scoreLower") -1

      form(action="" name="inputScore" id="raiseScore2" method="post")
        input(id="stat_game_id", type="hidden", name ="stat_game_id" style="display: none;" value="#{game.id}")
        button(type="submit" id="scoreRaise") +1

      form(action="" name="inputScore" id="lowerScore2" method="post")
        input(id="stat_game_id", type="hidden", name ="stat_game_id" style="display: none;" value="#{game.id}")
        button(type="submit" id="scoreLower") -1

      script(src="http://localhost:3000/socket.io/socket.io.js")
      script(src="/javascripts/sockets.js")
